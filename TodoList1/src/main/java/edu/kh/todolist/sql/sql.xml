<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
	<!-- driver.xml 파일 : DB 연결 정보를 작성하는 외부 파일 entry : K, V 한 쌍을 나타내는 단위 <entry 
		key="K"> V </entry> -->

	<!-- 사용자 등록 -->
	<entry key="selectAll">
		SELECT 
		    TODO_NO,
			TODO_TITLE,
  			TODO_DETAIL,
		   	TODO_COMPLETE,
		    TODO_TIME
		FROM 
			TB_TODO
	</entry>
	
